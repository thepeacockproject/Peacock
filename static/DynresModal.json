{
    "$datacontext": {
        "in": "$.",
        "datavalues": {
            "_comment": "this is shown if the user does not have the dynamic resources package",
            "Url": "https://thepeacockproject.org/wiki/troubleshooting/missing-strings"
        },
        "do": {
            "show-modal": {
                "config": {
                    "view": "menu3.modal.ModalDialogGeneric",
                    "buttons": [
                        "$loc UI_PEACOCK_DIALOG_GOTOWIKI",
                        {
                            "label": "$loc UI_DIALOG_CANCEL",
                            "type": "cancel"
                        }
                    ],
                    "data": {
                        "dialogWidth": 768,
                        "frameheightmax": 600,
                        "information": [
                            {
                                "description": "$loc UI_PEACOCK_DIALOG_DYNRES_MISSING"
                            }
                        ]
                    }
                },
                "onbutton": [
                    [
                        {
                            "open-url": {
                                "url": "$.Url"
                            }
                        },
                        {
                            "set-value": {
                                "target": "$.@global.OtherModalWasShown",
                                "value": true
                            }
                        }
                    ],
                    [
                        {
                            "set-value": {
                                "target": "$.@global.OtherModalWasShown",
                                "value": true
                            }
                        }
                    ]
                ]
            }
        }
    }
}
